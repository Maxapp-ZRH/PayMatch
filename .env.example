# =============================================================================
# PayMatch Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# =============================================================================
# Supabase Configuration
# =============================================================================

NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=your_redis_url_here

# =============================================================================
# Resend Email Service
# =============================================================================
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# Email configuration
RESEND_FROM_EMAIL=noreply@paymatch.app
RESEND_FROM_NAME=PayMatch

# Support email
SUPPORT_EMAIL=support@paymatch.app
ADMIN_EMAIL=info@paymatch.app

# =============================================================================
# Stripe Payment Processing
# =============================================================================
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# Application Configuration
# =============================================================================
# Next.js configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# Email Unsubscribe System
# =============================================================================
# Generate a secure random string for unsubscribe token signing
# You can generate one using: openssl rand -base64 32
UNSUBSCRIBE_TOKEN_SECRET=your_unsubscribe_token_secret_here

# Unsubscribe token expiration (in days)
UNSUBSCRIBE_TOKEN_EXPIRES_DAYS=30
